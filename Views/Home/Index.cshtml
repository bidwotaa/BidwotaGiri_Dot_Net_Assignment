@{
    ViewData["Title"] = "Event Management System - Home Page";
    var username = ViewData["Username"] as string;
    var isLoggedIn = !string.IsNullOrEmpty(username);
}


<section class="hero bg-white text-white text-center py-5">
    <div class="container text-black">
        <h1 class="display-4 mb-3">Welcome to Event Management System</h1>
        <p class="lead mb-4">Your all-in-one solution for organizing, managing, and tracking events effortlessly.</p>

        @if (isLoggedIn)
        {
            <p class="mb-3">Welcome Back, <strong>@username</strong>!</p>
            <div>
                <a href="@Url.Action("Add", "Event")" class="btn btn-primary btn-lg me-3">Create Event</a>
                <a href="@Url.Action("List", "Event")" class="btn btn-outline-secondary btn-lg">View Events</a>
            </div>
        }
        else
        {
            <a href="/Identity/Account/Login" class="btn btn-outline-primary btn-lg">Login To Start Managing Events</a>
        }
    </div>
</section>


<section class="features pt-3 mt-5">
    <div class="container text-center">
        <h2 class="display-5 mb-5">Our Key Features</h2>
        <div class="row">
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card shadow-lg p-4 border-0 w-100">
                    <h4 class="text-primary">Create Events</h4>
                    <p>Add new events with essential details and manage them seamlessly.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card shadow-lg p-4 border-0 w-100">
                    <h4 class="text-primary">Update Events</h4>
                    <p>Edit event details to keep information up-to-date.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card shadow-lg p-4 border-0 w-100">
                    <h4 class="text-primary">Delete Events</h4>
                    <p>Remove events that are no longer needed with a simple action.</p>
                </div>
            </div>
        </div>
    </div>
</section>