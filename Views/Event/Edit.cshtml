@{
    ViewData["Title"] = "Edit Event";

}

@model BidwotaGiri_Dot_Net_Assignment.Models.AddEventViewModel

<div class="container py-5">
    @if (Model is null)
    {
        <p>No Events Found with this ID</p>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-body p-4 bg-light">
                        <h3 class="text-center mb-4 text-primary">Edit Event</h3>

                        <form method="post">
                            <input type="hidden" asp-for="Id" /> 

                            <div class="mb-3">
                                <label for="EventName" class="form-label text-secondary">Event Name</label>
                                <input type="text" class="form-control form-control-lg border-primary" id="EventName" placeholder="Enter event name" asp-for="EventName" required>
                            </div>

                            <div class="mb-3">
                                <label for="StartDate" class="form-label text-secondary">Event Date</label>
                                <input type="date" class="form-control form-control-lg border-primary" id="StartDate" asp-for="StartDate" required>
                            </div>

                            <div class="mb-3">
                                <label for="Location" class="form-label text-secondary">Event Location</label>
                                <input type="text" class="form-control form-control-lg border-primary" id="Location" placeholder="Enter event location" asp-for="Location" required>
                            </div>

                            <div class="mb-3">
                                <label for="Description" class="form-label text-secondary">Event Description</label>
                                <textarea class="form-control form-control-lg border-primary" id="Description" rows="3" placeholder="Enter event description" asp-for="Description" required></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg shadow-sm">Update Event</button>
                                <button type="submit" class="btn btn-danger btn-lg shadow-sm mt-2" asp-action="Delete" asp-controller="Event">Delete Event</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
